<% @cities.each do |city| %>
  <div class="citypicture" style="background-image: url(<%= city.picture %>); height: 400px; max-height: 100%; max-width: 100%; background-position: center; background-repeat: no-repeat; background-size: cover; border: 1px solid black;">
   <h3><%= city.name %></h3>
   <%= link_to "Show", city_path(city.id) %>
  </div>
  <br>
<% end %>
