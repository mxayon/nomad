<h3> <%= @city.name %> </h3>
  <p>Website: <%= @city.city_website %> </p>
  <p>Description: <%= @city.description %> </p>
<% if current_user %>
  <%= button_to "New Post", new_post_path %>
<% end %>
<hr><br>

<div class="card large">
  <% @city.posts.order('created_at DESC').each do |post| %>
    <h2 class="header"><%= post.title %></h2>
    <div class="card horizontal">
      <div class="card-image">
        <img src="<%= post.picture %>">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p><%= post.content %></p>
          <p><%= post.created_at.strftime("Post made %m/%d/%Y at %I:%M%p") %></p>
        </div>
        <div class="row center-align">
          <% if current_user && current_user[:id] == post[:user_id] %>
          <%= button_to "Edit", edit_post_path(@city.id, post[:id]), method: :get, :class => "btn indigo"  %>
          <%= button_to "/cities/#{@city.id}/posts/#{post.id}", method: :delete, data: { confirm: 'Are you sure?' }, :class => "" do %> Delete
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
