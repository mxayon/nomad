<h3> City </h3>
<div>
 Welcome to <%= @city.name %>
</div>
<div>
 Website: <%= @city.city_website %>
</div>
<div>
 Description: <%= @city.description %>
</div>
<div>
  <%= button_to "New Post", new_post_path %>
</div>
<hr>
<h4>Posts</h4>

<% @city.posts.each do |post| %>
  <div>
   <h3><%= post.title %></h3>
   <h3 class="image"><img src="<%= post.picture %>"></h3>
   <p><%= post.content %></p>
   <hr>
 </div>
 <br>
<% end %>
