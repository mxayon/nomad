<h1> Welcome <%= @user.username %> </h1>
<img src="<%=@user.photo%>" style="height: 190px; width: 200px;">
<hr>
<% if @posts %>
<h3><%= @user.first_name %>'s Posts</h3>
<h4>posting from <%= @user.location %></h4>
<% end %>

<% @user.posts.order('created_at DESC').each do |post| %>
<%= post.title %><br>
<img src="<%=post.picture%>" style="height: 190px; width: 250px;">
<br>
<%= post.content %><br>
<%= post.created_at %>
<hr>
<% end %>
